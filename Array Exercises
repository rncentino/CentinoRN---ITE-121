//THIS PROGRAM ONLY ACCEPTS 10 INPUT

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace CSharpArray_by_Nero
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] elements = new int[10];
            
            Console.WriteLine("USER INPUTS: ");
            for(int i = 0; i < elements.Length; i++)
            {
                elements[i] = Convert.ToInt32(Console.In.ReadLine());
                Console.WriteLine(elements[i]);
            }
            
            Console.WriteLine();
            //FUNCTION 1
            Console.WriteLine("Function 1: ");
            
            
            Console.WriteLine();
            //FUNCTION 2
            Console.WriteLine("Function 2: ");
            var totalElements = elements.Count();
            Console.WriteLine(totalElements);
            
            Console.WriteLine();
            //FUNCTION 3
            List < int > myList = elements.Distinct().ToList();
            Console.WriteLine("Function 3: ");
            foreach(int a in myList) {
                Console.WriteLine("{0}",a);
            }
            
            Console.WriteLine();
            //FUNCTION 4
            Console.WriteLine("Function 4: ");
            var dict = new Dictionary < int,int >();
            foreach(var value in elements)
            {
                if (dict.ContainsKey(value))Â dict[value]++;
                else dict[value] = 1;
            }
            foreach(var pair in dict)
            Console.WriteLine("Value {0} occured {1} times", pair.Key, pair.Value);
            
            Console.WriteLine();
            //FUNCTION 5
            Console.WriteLine("Function 5: ");
            int[] dist = elements.Distinct().ToArray();
            Console.WriteLine(String.Join(",", dist));
            
            
            Console.ReadKey();
        }
    }
}
